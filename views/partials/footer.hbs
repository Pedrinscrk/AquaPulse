    });

// Botão voltar ao topo
document.querySelector('.back-to-top').addEventListener('click', () => {
    window.scrollTo({ top: 0, behavior: 'smooth' });
});

// Mostrar/ocultar botão
function toggleBackToTop() {
    const button = document.querySelector('.back-to-top');
    const scrollTotal = document.documentElement.scrollHeight - window.innerHeight;
    
    // Verifica se a página tem scroll suficiente
    if (scrollTotal > 0) {
        const isNearBottom = (window.scrollY + window.innerHeight) >= (scrollTotal - 50);
        button.style.display = isNearBottom ? 'block' : 'none';
    } else {
        // Se não houver scroll suficiente, mantém o botão oculto
        button.style.display = 'none';
    }
}

// Executa ao carregar e ao scrollar
window.addEventListener('load', toggleBackToTop);
window.addEventListener('scroll', toggleBackToTop);

