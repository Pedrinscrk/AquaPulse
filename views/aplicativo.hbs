<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AquaPulse - Em Desenvolvimento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    {{> header}}
    <style>
        /* Reset & Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: #0a0a0a;
            color: #fff;
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* Espaço para o Header */
        .dev-container {
            padding-top: 6rem; /* Espaço aumentado para o header */
        }

        /* Efeitos Globais */
        .cyber-glow {
            text-shadow: 0 0 15px rgba(40, 167, 69, 0.4);
        }

        .neon-border {
            border: 1px solid rgba(40, 167, 69, 0.4);
            box-shadow: 0 0 25px rgba(40, 167, 69, 0.15);
        }

        /* Container Principal */
        .dev-container {
            max-width: 1200px;
            margin: auto;
            padding: 2rem;
            text-align: center;
        }

        /* Seção Hero Ajustada */
        .dev-hero {
            padding: 4rem 0;
            position: relative;
            overflow: hidden;
            margin-bottom: 4rem;
        }

        .dev-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: 
                conic-gradient(from 180deg at 50% 50%, 
                    #28a745 0deg, 
                    transparent 180deg, 
                    #28a745 360deg),
                linear-gradient(45deg, 
                    rgba(40, 167, 69, 0.05) 0%, 
                    rgba(0,0,0,0) 100%);
            animation: rotate 20s linear infinite;
            opacity: 0.15;
        }

        .dev-hero::after {
            content: '';
            position: absolute;
            inset: 0;
            background: repeating-linear-gradient(
                0deg,
                rgba(40, 167, 69, 0.03) 0px,
                rgba(40, 167, 69, 0.03) 1px,
                transparent 1px,
                transparent 20px
            );
        }

        /* Ícone Flutuante */
        .floating-icon {
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        /* Progresso Aprimorado */
        .progress-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2.5rem;
            margin: 4rem 0;
        }

        .progress-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(20px);
            padding: 2.5rem 2rem;
            border-radius: 20px;
            position: relative;
            transition: transform 0.3s ease;
        }

        .progress-card:hover {
            transform: translateY(-5px);
        }

        .progress-card::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 20px;
            padding: 2px;
            background: linear-gradient(45deg, 
                rgba(40, 167, 69, 0.4) 0%, 
                rgba(40, 167, 69, 0.1) 100%);
            -webkit-mask: 
                linear-gradient(#fff 0 0) content-box, 
                linear-gradient(#fff 0 0);
            mask-composite: exclude;
        }

        .progress-bar {
            height: 10px;
            background: rgba(255,255,255,0.08);
            border-radius: 5px;
            overflow: hidden;
            margin: 1.5rem 0;
            position: relative;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, 
                #28a745 0%, 
                rgba(40, 167, 69, 0.6) 100%);
            width: 0;
            transition: width 1s ease 0.3s;
            position: relative;
        }

        .progress-fill::after {
            content: '';
            position: absolute;
            right: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: rgba(255,255,255,0.3);
        }

        /* Novidades */
        .feature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin: 3rem 0;
        }

        .feature-card {
            padding: 2rem;
            background: rgba(40, 167, 69, 0.05);
            border-radius: 15px;
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            background: rgba(40, 167, 69, 0.08);
        }

        /* Contato */
        .contact-section {
            margin-top: 5rem;
            padding: 3rem 0;
            background: rgba(255,255,255,0.02);
            border-radius: 20px;
        }

        /* Animações */
        @keyframes rotate {
            100% { transform: rotate(360deg); }
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .dev-container {
                padding: 4rem 1rem 1rem; /* Ajuste fino para mobile */
            }

            .progress-grid {
                gap: 1.5rem;
            }

            .dev-hero {
                padding: 3rem 0;
            }
        }
    </style>
</head>
<body>
    <div class="dev-container">
        <section class="dev-hero">
            <div class="floating-icon">
                <i class="bi bi-tools" style="font-size: 4.5rem; color: #28a745;"></i>
            </div>
            <h1 class="cyber-glow" style="font-size: 2.4rem; margin: 3rem 0 1.5rem;">
                APLICAÇÃO EM DESENVOLVIMENTO
            </h1>
            <p style="font-size: 1.1rem; opacity: 0.9; max-width: 600px; margin: 0 auto;">
                Estamos trabalhando duro para trazer uma experiência revolucionária em gestão de irrigação
            </p>
        </section>

        <div class="progress-grid">
            <div class="progress-card">
                <h3 style="margin-bottom: 1rem;"><i class="bi bi-cpu"></i> Sistema Central</h3>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 85%;"></div>
                </div>
                <span style="color: #28a745;">85% Completo</span>
            </div>

            <div class="progress-card">
                <h3 style="margin-bottom: 1rem;"><i class="bi bi-graph-up"></i> Análises</h3>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 65%;"></div>
                </div>
                <span style="color: #28a745;">65% Completo</span>
            </div>

            <div class="progress-card">
                <h3 style="margin-bottom: 1rem;"><i class="bi bi-shield-check"></i> Segurança</h3>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: 95%;"></div>
                </div>
                <span style="color: #28a745;">95% Completo</span>
            </div>
        </div>

        <div class="feature-grid">
            <div class="feature-card">
                <i class="bi bi-cloud-arrow-up" style="font-size: 2rem; color: #28a745; margin-bottom: 1rem;"></i>
                <h4>Armazenamento em Nuvem</h4>
                <p style="opacity: 0.8; margin-top: 0.5rem;">Dados sincronizados e acessíveis de qualquer lugar</p>
            </div>

            <div class="feature-card">
                <i class="bi bi-phone" style="font-size: 2rem; color: #28a745; margin-bottom: 1rem;"></i>
                <h4>Aplicativo Mobile</h4>
                <p style="opacity: 0.8; margin-top: 0.5rem;">Controle total pelo seu smartphone</p>
            </div>

            <div class="feature-card">
                <i class="bi bi-lightning-charge" style="font-size: 2rem; color: #28a745; margin-bottom: 1rem;"></i>
                <h4>Atualizações em Tempo Real</h4>
                <p style="opacity: 0.8; margin-top: 0.5rem;">Monitoramento 24/7 dos seus sistemas</p>
            </div>
        </div>

        <div class="contact-section">
            <h2 class="cyber-glow" style="margin-bottom: 1.5rem;">Fique Atualizado</h2>
            <p style="max-width: 500px; margin: 0 auto 2rem; opacity: 0.9;">
                Cadastre-se para receber notificações sobre o lançamento
            </p>
            <div style="display: flex; gap: 1rem; justify-content: center; max-width: 500px; margin: 0 auto;">
                <input type="email" placeholder="Seu melhor e-mail" 
                    style="padding: 0.8rem; border-radius: 8px; border: none; 
                    background: rgba(255,255,255,0.05); color: white; flex: 1;">
                <button style="padding: 0.8rem 2rem; border-radius: 8px; border: none;
                    background: #28a745; color: white; cursor: pointer;">
                    Notifique-me
                </button>
            </div>
        </div>
    </div>

    <script>
        // Animações de Entrada
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.progress-card, .feature-card');
            elements.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight * 0.8) {
                    el.style.opacity = '1';
                    el.style.transform = 'translateY(0)';
                }
            });
        };

        // Inicializa animações
        document.addEventListener('DOMContentLoaded', () => {
            // Anima barras de progresso
            document.querySelectorAll('.progress-fill').forEach(bar => {
                const targetWidth = bar.style.width;
                bar.style.width = '0';
                setTimeout(() => {
                    bar.style.width = targetWidth;
                }, 500);
            });

            // Configura observador de scroll
            window.addEventListener('scroll', animateOnScroll);
            animateOnScroll(); // Executa inicialmente
        });
    </script>
</body>
</html>