    <!-- CSS externo do projeto -->
    <link rel="stylesheet" href="src/css/header.css">
    <link rel="stylesheet" href="src/css/produts.css">
    <link rel="stylesheet" href="src/css/footer.css">
    <script src="src/js/menu.js" defer></script>

    <style>
        /* Reset & Box-sizing */
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        /* Inibir scrollbar quando o modal estiver ativo */
        
        body.no-scroll {
            overflow: hidden;
        }
        
        body {
            font-family: 'Poppins', Arial, sans-serif;
            background: #0D0D0D;
            color: white;
            overflow-x: hidden;
            scroll-behavior: smooth;
        }
        /* --------- HEADER --------- */
        
        /* --------- SEÇÕES --------- */
        
        .section {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
            padding: 20px;
        }
        
        .section-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            gap: 30px;
            opacity: 0;
            transform: translateY(50px);
            transition: opacity 1s ease, transform 1s ease;
        }
        
        .section.active .section-content {
            opacity: 1;
            transform: translateY(0);
        }
        
        .content {
            flex: 1;
        }
        
        .content h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }
        
        .content p {
            font-size: 1.2rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }
        
        .info-list {
            margin-top: 20px;
        }
        
        .info-list li {
            display: flex;
            align-items: center;
            font-size: 1.2rem;
            margin-bottom: 15px;
        }
        
        .info-list li i {
            font-size: 1.5rem;
            color: #28a745;
            margin-right: 10px;
        }
        
        .buttons {
            margin-top: 30px;
        }
        
        .buttons a {
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 600;
            margin-right: 10px;
            transition: background-color 0.3s ease;
        }
        
        .buttons a.saiba-mais {
            background: transparent;
            border: 2px solid white;
            color: white;
        }
        
        .buttons a.saiba-mais:hover {
            background: white;
            color: #007bff;
        }
        
        .buttons a.comprar {
            background: #28a745;
            color: white;
        }
        
        .buttons a.comprar:hover {
            background: #218838;
        }
        
        .image-container {
            flex: 1;
            display: flex;
            justify-content: center;
        }
        
        .image-container img {
            max-height: 600px;
            width: auto;
            transition: transform 1s ease, opacity 1s ease;
            opacity: 0;
            border-radius: 5px;
            transform: scale(0.8);
        }
        
        .section.active img {
            transform: scale(1);
            opacity: 1;
        }
        /* --------- DIVIDER --------- */
        
        .divider {
            border: 0;
            border-top: 2px solid white;
            margin: 50px 0;
            width: 80%;
            margin-left: auto;
            margin-right: auto;
        }
        /* --------- GRADE DE PRODUTOS --------- */
        
        .product-grid {
            display: flex;
            justify-content: center;
            gap: 40px;
            padding: 50px 20px;
            background-color: #0d0d0d;
        }
        
        .product-item {
            text-align: center;
            width: 250px;
            /* Ajuste para alinhar todos os botões "Saiba Mais" */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 330px;
            /* Ajuste conforme desejado */
            padding: 10px;
            border-radius: 10px;
        }
        
        .product-item img {
            width: 100%;
            height: 160px;
            object-fit: cover;
            border-radius: 10px;
        }
        
        .product-item h3 {
            font-size: 1.4rem;
            margin: 15px 0;
        }
        
        .product-item a.saiba-mais {
            display: inline-block;
            padding: 12px 20px;
            text-decoration: none;
            background: transparent;
            border: 2px solid white;
            color: white;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            margin-top: auto;
            /* empurra o botão para baixo */
        }
        
        .product-item a.saiba-mais:hover {
            background: white;
            color: #218838;
        }
        /* --------- RODAPÉ --------- */
        
        footer {
            background-color: #0d0d0d;
            text-align: center;
            padding: 15px;
        }
        
        .links-footer {
            color: white;
            text-decoration: none;
            margin: 0 5px;
        }
        
        .links-footer:hover {
            text-decoration: underline;
        }
        
        #redes-sociais a i {
            font-size: 1.5rem;
        }
        /* --------- MODAL COM ESTILO VIDRO (FROSTED) + TABS --------- */
        
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.6);
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 999;
        }
        
        .modal-overlay.active {
            opacity: 1;
            visibility: visible;
        }
        /* Aumentando e mudando radicalmente o design do modal */
        
        .modal-content {
            position: relative;
            width: 90%;
            max-width: 900px;
            color: #ffffff;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.8);
            border: 1px solid rgba(255, 255, 255, 0.3);
            overflow: hidden;
            /* se algo transbordar */
        }
        
        .modal-close {
            cursor: pointer;
            background: none;
            border: none;
            font-size: 1.8rem;
            color: #fff;
            position: absolute;
            top: 20px;
            right: 30px;
            z-index: 10;
        }
        
        .modal-header {
            margin-bottom: 25px;
        }
        
        .modal-header h2 {
            margin: 0;
            font-size: 2rem;
            font-weight: 600;
        }
        
        .modal-tabs {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }
        
        .modal-tab {
            cursor: pointer;
            padding: 8px 16px;
            border-radius: 6px;
            background: rgba(255, 255, 255, 0.2);
            transition: background 0.3s ease, transform 0.2s ease;
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .modal-tab:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
        }
        
        .modal-tab.active-tab {
            background: #00b894;
            /* Cor destaque (verde/água) */
            color: #fff;
        }
        
        .tab-content {
            display: none;
            animation: fadeIn 0.3s ease forwards;
        }
        
        .tab-content.active-content {
            display: block;
        }
        
        .tab-content ul {
            list-style-type: disc;
            padding-left: 20px;
        }
        
        .tab-content ul li {
            margin-bottom: 10px;
        }
        /* Animação suave ao exibir conteúdo */
        
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        /* ========== RESPONSIVO PARA CELULAR ========== */
@media (max-width: 768px) {
    /* Ajustes gerais */
    .section {
        height: auto;
        min-height: 100vh;
        padding: 60px 15px;
    }

    .section-content {
        flex-direction: column;
        gap: 40px;
        transform: none !important;
        opacity: 1 !important;
    }

    /* Inverte ordem para seções pares */
    .section:nth-child(even) .section-content {
        flex-direction: column-reverse;
    }

    .content {
        width: 100%;
        text-align: center;
    }

    .content h1 {
        font-size: 2rem;
        margin-bottom: 15px;
    }

    .content p {
        font-size: 1rem;
        line-height: 1.5;
    }

    /* Lista de informações */
    .info-list {
        margin-top: 15px;
    }

    .info-list li {
        justify-content: center;
        font-size: 1rem;
    }

    /* Botões */
    .buttons {
        flex-direction: column;
        gap: 15px;
        margin-top: 25px;
    }

    .buttons a {
        display: block;
        width: 100%;
        margin: 0;
        padding: 12px;
    }

    /* Imagens */
    .image-container {
        width: 100%;
        max-width: 300px;
    }

    .image-container img {
        max-height: 300px;
        width: 100%;
    }

    /* Modal */
    .modal-content {
        width: 95%;
        padding: 25px;
    }

    .modal-header h2 {
        font-size: 1.5rem;
    }

    .modal-tabs {
        gap: 10px;
        justify-content: center;
    }

    .modal-tab {
        font-size: 0.9rem;
        padding: 6px 12px;
    }

    /* Product Grid */
    .product-grid {
        flex-direction: column;
        padding: 30px 15px;
        gap: 30px;
    }

    .product-item {
        width: 100%;
        height: auto;
        padding: 15px;
    }

    .product-item img {
        height: 200px;
    }

    /* Footer */
    footer {
        padding: 25px 15px;
    }
}

@media (max-width: 480px) {
    /* Ajustes extras para telas muito pequenas */
    .modal-tabs {
        flex-wrap: wrap;
    }
    
    .modal-tab {
        font-size: 0.8rem;
    }
    
    .image-container img {
        max-height: 250px;
    }
    
    .product-item h3 {
        font-size: 1.2rem;
    }
}
/* ========== ANIMAÇÃO TEXTO ========== */
@keyframes textEntrance {
    from {
        opacity: 0;
        transform: translateY(20px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.content > * {
    animation: textEntrance 1s ease forwards;
    opacity: 0;
}

.content h1 { animation-delay: 0.3s; }
.content p { animation-delay: 0.6s; }
.content .info-list { animation-delay: 0.9s; }
.content .buttons { animation-delay: 1.2s; }

/* Ajuste para mobile */
@media (max-width: 768px) {
    @keyframes textEntrance {
        from {
            opacity: 0;
            transform: translateY(15px) scale(0.97);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
    
    .content > * {
        animation-duration: 0.8s;
    }
    
    .content h1 { animation-delay: 0.2s; }
    .content p { animation-delay: 0.4s; }
    .content .info-list { animation-delay: 0.6s; }
    .content .buttons { animation-delay: 0.8s; }
}
    </style>
</head>

